{% extends 'base.html.twig' %}

{% block title %} Panel utilisateur {% endblock %}

{% block content %}
    <div class="add">
        <a href="./index.php?controller=user&action=create" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
    </div>

    <table class="striped centered">
        <thead>
        <tr>
            <th>User</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td><a href="./index.php?controller=user&action=update&id={{ user.id }}" class="waves-effect waves-light btn-small blue lighten-1">+</a></td>
                <td><a href="./index.php?controller=user&action=delete&id={{ user.id }}" class="waves-effect waves-light btn-small red lighten-1">-</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
